{% extends "layout/layout.twig" %}

{% block js %}
    {% webpack_entry_js 'user/user-list' %}
{% endblock %}

{% block content %}

<div id="content" class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">{{ 'Home'|trans }}</li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'User list'|trans }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-12">
            {% include 'layout/flash.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h1><i class="fas fa-user"></i> {{ 'User list'|trans }}</h1>

            <button id="add-button" type="button" class="btn btn-outline-primary">{{ 'Add user'|trans }}</button>
            <button id="refresh-button" type="button" class="btn btn-outline-success">{{ 'Refresh'|trans }}</button>

            <hr>

            <table id="data-table"
                   class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                <thead>
                <tr>
                    <th>{{ 'Username'|trans }}</th>
                    <th>{{ 'E-Mail'|trans }}</th>
                    <th>{{ 'First name'|trans }}</th>
                    <th>{{ 'Last name'|trans }}</th>
                    <th>{{ 'Role'|trans }}</th>
                    <th>{{ 'Enabled'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.first_name }}</td>
                        <td>{{ user.last_name }}</td>
                        <td>{{ user.role }}</td>
                        <td>{{ user.enabled }}</td>
                        <td>
                            <a class="btn btn-outline-primary"
                               href="{{ url_for('user-view', { 'id': user.id }) }}"
                               role="button">
                                {{ 'Edit'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <p></p>
        </div>
    </div>
    {% endblock %}


