{% extends "layout/layout.twig" %}

{% block content %}

    <div id="content" class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ url_for('user-list') }}">{{ 'Home'|trans }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <a href="{{ url_for('user-list') }}">{{ 'User list'|trans }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'User'|trans }}</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-12">
                {% include 'layout/flash.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <a href="{{ url_for('user-list') }}"
                   class="btn btn-outline-primary">{{ 'Cancel'|trans }}</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <hr>
                <form class="col-md-7">
                    <div class="mb-3">
                        <label class="col-sm-2 form-label">{{ 'User-ID'|trans }}:</label>
                        <label>{{ user.id }}</label>
                    </div>
                    <div class="row mb-3">
                        <label for="username" class="col-sm-2 col-form-label">{{ 'Username'|trans }}</label>
                        <div class="col-sm-10">
                            <input type="text" id="username" value="{{ user.username }}" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="email" class="col-sm-2 col-form-label">{{ 'E-Mail'|trans }}</label>
                        <div class="col-sm-10">
                            <input type="text" id="email" value="{{ user.email }}" class="form-control">
                        </div>
                    </div>
                </form>
                <p></p>
            </div>
        </div>
    </div>
{% endblock %}
